{
  "agents": {
    "defaults": {
      "workspace": "~/.picoclaw/workspace",
      "restrict_to_workspace": false,
      "model_name": "claude-sonnet-4",
      "max_tokens": 8192,
      "temperature": 0.3,
      "max_tool_iterations": 50
    }
  },
  "routing": {
    "enabled": true,
    "default_tier": "analysis",
    "enable_supervision": true,
    "supervisor_tier": "supervisor",
    "validation_confidence_threshold": 0.8,
    "min_task_complexity_for_supervision": 3,
    "tiers": {
      "supervisor": {
        "model_name": "claude-sonnet-4",
        "use_for": ["validation", "security_analysis", "exploit_review", "final_assessment"],
        "cost_per_m": {
          "input": 3.0,
          "output": 15.0
        }
      },
      "analysis": {
        "model_name": "claude-haiku",
        "use_for": ["reconnaissance", "vulnerability_scanning", "payload_analysis", "initial_assessment"],
        "cost_per_m": {
          "input": 0.25,
          "output": 1.25
        }
      },
      "exploitation": {
        "model_name": "gpt-3.5-turbo",
        "use_for": ["exploit_development", "privilege_escalation", "payload_generation"],
        "cost_per_m": {
          "input": 0.5,
          "output": 1.5
        }
      },
      "parsing": {
        "model_name": "nemotron-nano-local",
        "use_for": ["html_parsing", "log_analysis", "data_extraction", "response_processing"],
        "cost_per_m": {
          "input": 0.0,
          "output": 0.0
        }
      }
    }
  },
  "model_list": [
    {
      "model_name": "claude-sonnet-4",
      "model": "anthropic/claude-sonnet-4-20250514",
      "api_key": "${ANTHROPIC_API_KEY}"
    },
    {
      "model_name": "claude-haiku",
      "model": "anthropic/claude-haiku-3-20250307",
      "api_key": "${ANTHROPIC_API_KEY}"
    },
    {
      "model_name": "gpt-3.5-turbo",
      "model": "openai/gpt-3.5-turbo",
      "api_key": "${OPENAI_API_KEY}"
    },
    {
      "model_name": "nemotron-nano-local",
      "model": "lmstudio/nvidia-nemotron-3-nano",
      "api_base": "http://localhost:1234/v1"
    },
    {
      "model_name": "codestral-22b-local",
      "model": "lmstudio/codestral-22b-v0.1-8bit",
      "api_base": "http://localhost:1234/v1"
    }
  ],
  "channels": {
    "telegram": {
      "enabled": false,
      "token": "",
      "allow_from": []
    },
    "discord": {
      "enabled": false,
      "token": "",
      "allow_from": []
    }
  },
  "tools": {
    "web": {
      "brave": {
        "enabled": false,
        "api_key": "",
        "max_results": 5
      },
      "tavily": {
        "enabled": false,
        "api_key": "",
        "max_results": 5
      },
      "duckduckgo": {
        "enabled": true,
        "max_results": 5
      }
    },
    "cron": {
      "exec_timeout_minutes": 5
    },
    "exec": {
      "enable_deny_patterns": true,
      "custom_deny_patterns": []
    },
    "skills": {
      "registries": {
        "clawhub": {
          "enabled": false
        }
      },
      "max_concurrent_searches": 5,
      "search_cache": {
        "max_size": 100,
        "ttl_seconds": 3600
      }
    }
  },
  "heartbeat": {
    "enabled": false,
    "interval": 30
  },
  "devices": {
    "enabled": false
  },
  "gateway": {
    "host": "127.0.0.1",
    "port": 8080
  }
}